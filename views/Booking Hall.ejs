            <select id="hallType" class="form-control" >
                <% for(var i=0; i < halls.length; i++) { %>
                    <option value=<%=halls[i].H_ID%>><%=`${halls[i].Type}`%></option>
                <% } %>    
            </select>
          </div>
          
          <main class="form-group col-md-2">
