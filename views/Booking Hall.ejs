  <script>
    
    function UpdateHalls() {
      const idElement = document.getElementById("ID")
      const text = idElement.value

      const DayElement = document.getElementById("datepicker")
      const day = DayElement.value

      const hallTypeElement = document.getElementById("hallType")
      const hallType = hallTypeElement.value

      console.log({text,day,hallType})
      if (text) {
        fetch(`http://localhost:5000/bookhall` , {
            method: "POST",
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            
            ID: text,
            hallType:hallType,
            datepicker: day


          })
        } ).then(async (res) => {
          alert("Response Submitted")
        }).catch(err => {
          alert("Submission Failed")
          console.log(err)
        })
      } else {
        alert("Enter the ID")
      }
    }
    
    
    
    const button = document.getElementById("Book")
    button.addEventListener("click", UpdateHalls)
    </script>

